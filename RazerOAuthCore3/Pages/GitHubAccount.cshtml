@page
@model RazerOAuthCore3.Pages.GitHubAccountModel
@{
    ViewData["Title"] = "GitHubAccount";
}

<h1 style="text-align: center;">GitHubAccount</h1>
<div class="container">
    <div class="row">
        <div class="col-md-2">
            <img src="@Model.GitHubAvatar" alt="" class="img-thumbnail" />
        </div>
        <div class="col-md-10">
            <h4>@Model.GitHubName</h4>
            <p><i class="fab fa-github"></i><a href="@Model.GitHubUrl">@Model.GitHubLogin</a></p>
            <h4>Repositories</h4>
            <ul>
                @foreach (var repo in Model.Repositories)
                {
                    <li><a href="@repo.HtmlUrl">@repo.FullName</a></li>
                }
            </ul>
        </div>


    </div>
</div>

